<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="dataViewModel"
                  type="com.example.aaron.popularmoviespractice.viewModel.DetailViewModel"/>
    </data>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:context="com.example.aaron.popularmoviespractice.MainActivity">
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:padding="15dp"
                    android:textSize="35sp"
                    android:id="@+id/det_txtTitle"
                    android:background="@color/colorMovieTitle"
                    android:text="@{dataViewModel.movieTitle}"
                    android:textColor="#FFF"
                    android:gravity="center_vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            <ImageView
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:contentDescription="@string/imageMovie"
                    android:id="@+id/det_imageMovie"
                    app:layout_constraintTop_toBottomOf="@id/det_txtTitle"
                    android:src="@mipmap/ic_launcher_round"
                    android:padding="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/guideline"/>
            <android.support.constraint.Guideline
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:id="@+id/guideline"
                    app:layout_constraintGuide_percent="0.4"
                    android:orientation="vertical"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:id="@+id/det_txtYear"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toEndOf="@id/guideline"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/det_txtTitle"
                    android:text="@{dataViewModel.movieYear}"/>

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toEndOf="@id/guideline"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/det_txtLength"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/det_txtYear"
                    android:text="@{dataViewModel.movieLength}"/>

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:id="@+id/det_txtRate"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toEndOf="@id/guideline"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/det_txtLength"
                    android:text="@{dataViewModel.movieRate}"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:id="@+id/det_txtDesc"
                    android:padding="4dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/det_imageMovie"
                    android:text="@{dataViewModel.movieDescription}"/>


            <android.support.v4.widget.NestedScrollView
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:clipToPadding="false"
                    android:fillViewport="true"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/det_txtDesc"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="8dp">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/det_linearTrailers"
                        android:orientation="vertical">
                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</layout>